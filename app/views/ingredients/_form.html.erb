<%= form_with(model: ingredient, local: true) do |form| %>
  <% if ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul>
        <% ingredient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Name" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :unit, "Mengeneinheit" %>
    <%= form.text_field :unit %>
  </div>

  <div class="field">
    <%= form.label :package_unit, "Packungseinheit" %>
    <%= form.text_field :package_unit %>
  </div>

  <div class="field">
    <%= form.label :package_size, "Packungsgröße" %>
    <%= form.text_field :package_size %>
  </div>

  <div class="field">
    <%= form.label :price_per_package, "Preis pro Packung" %>
    <%= form.text_field :price_per_package %>
  </div>

  <div class="field">
    <%= form.label :location, "Einkaufsort" %>
    <%= form.select :location, Ingredient::LOCATIONS, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit "Speichern", class: "btn btn-primary" %>
  </div>
<% end %>
